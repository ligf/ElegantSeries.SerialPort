<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<Version>1.0.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>ligf</Authors>
    <Description>.Net SerialPort Extensions</Description>
    <PackageProjectUrl>https://github.com/ligf/ElegantSeries.SerialPort</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ligf/ElegantSeries.SerialPort</RepositoryUrl>
    <PackageTags>Serial;SerialPort</PackageTags>
    <PackageReleaseNotes>.Net SerialPort Extensions</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Ports" Version="6.0.0" />
  </ItemGroup>

</Project>
